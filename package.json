  "main": "index.js",
  "scripts": {
    "dev": "docker-compose up",
    "build": "webpack --mode=production",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "prettier --write **/*.{js,json}",
